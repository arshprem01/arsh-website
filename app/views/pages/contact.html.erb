<div class="min-h-[70vh] flex flex-col justify-center py-12">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-16 max-w-6xl mx-auto w-full">
    
    <!-- Text Content -->
    <div class="space-y-8">
       <span class="text-sm uppercase tracking-widest text-secondary font-medium block mb-2">Contact</span>
       <h1 class="text-6xl md:text-7xl font-bold tracking-tighter text-primary leading-tight">
          Let's work <br/> together.
       </h1>
       <p class="text-xl text-secondary max-w-md font-light">
          Have a project in mind? I'm always looking for new challenges and opportunities to create meaningful products.
       </p>
       
       <div class="pt-8 space-y-4">
          <p class="text-primary font-bold text-lg">arsh@example.com</p>
          <p class="text-primary font-bold text-lg">+1 (234) 567-890</p>
       </div>
    </div>

    <!-- Minimal Form -->
    <div class="bg-tertiary p-8 md:p-12 rounded-sm border border-gray-100">
       <form class="space-y-8">
          <div class="space-y-4">
             <label class="uppercase text-xs font-bold tracking-widest text-primary">Name</label>
             <input type="text" class="w-full bg-transparent border-b border-secondary/30 py-4 text-primary focus:outline-none focus:border-primary transition-colors placeholder-gray-400" placeholder="John Doe">
          </div>
          <div class="space-y-4">
             <label class="uppercase text-xs font-bold tracking-widest text-primary">Email</label>
             <input type="email" class="w-full bg-transparent border-b border-secondary/30 py-4 text-primary focus:outline-none focus:border-primary transition-colors placeholder-gray-400" placeholder="john@example.com">
          </div>
           <div class="space-y-4">
             <label class="uppercase text-xs font-bold tracking-widest text-primary">Message</label>
             <textarea rows="4" class="w-full bg-transparent border-b border-secondary/30 py-4 text-primary focus:outline-none focus:border-primary transition-colors placeholder-gray-400 resize-none" placeholder="Tell me about your project..."></textarea>
          </div>
          
          <button type="submit" class="w-full py-4 bg-primary text-white font-bold uppercase tracking-widest text-sm hover:bg-black transition-all mt-4">
            Send Message
          </button>
       </form>
    </div>
  </div>
</div>
