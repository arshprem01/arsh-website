<div class="space-y-20 py-10">
  <!-- Page Header -->
  <div class="space-y-4 max-w-3xl">
    <div class="flex items-center gap-4 text-secondary">
      <span class="w-12 h-[1px] bg-secondary"></span>
      <span class="uppercase tracking-widest text-sm font-medium">Thoughts</span>
    </div>
    <h1 class="text-5xl md:text-7xl font-bold tracking-tighter text-primary">
      Blog
    </h1>
    <p class="text-secondary text-xl font-light max-w-2xl">
      Thoughts on software engineering, design, and technology.
    </p>
  </div>

  <!-- Blog Posts Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-16">
    <% posts = [
      { title: "Getting Started with Rails 8", date: "Jan 12, 2026", desc: "Exploring the new features and improvements in the latest version of Rails.", category: "Ruby on Rails" },
      { title: "Why I use React for Frontend", date: "Dec 30, 2025", desc: "A deep dive into why React remains my go-to library for building dynamic user interfaces.", category: "Frontend" },
      { title: "My Experience with Docker", date: "Nov 15, 2025", desc: "How containerization changed my development workflow and deployment strategies.", category: "DevOps" }
    ] %>

    <% posts.each_with_index do |post, index| %>
      <div class="group flex flex-col space-y-6 cursor-pointer">
        <!-- Post Image Placeholder -->
        <div class="aspect-[4/3] bg-tertiary overflow-hidden border border-gray-100">
          <div class="w-full h-full bg-gray-50 group-hover:bg-gray-100 transition-colors duration-500 relative flex items-center justify-center">
             <span class="text-4xl opacity-20 group-hover:opacity-40 transition-opacity">POST</span>
          </div>
        </div>

        <div class="space-y-2">
          <div class="flex justify-between items-baseline border-b border-gray-200 pb-4 group-hover:border-primary transition-colors">
            <h3 class="text-xl font-bold text-primary max-w-[80%]"><%= post[:title] %></h3>
            <span class="text-sm text-secondary group-hover:text-primary transition-colors"><%= post[:date] %></span>
          </div>
          <div class="space-y-1">
             <p class="text-secondary font-medium uppercase tracking-wide text-xs"><%= post[:category] %></p>
             <p class="text-gray-500 text-sm leading-relaxed"><%= post[:desc] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
