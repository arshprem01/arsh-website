<div class="space-y-20 py-10">
  <!-- Page Header -->
  <div class="space-y-4 max-w-3xl">
    <div class="flex items-center gap-4 text-secondary">
      <span class="w-12 h-[1px] bg-secondary"></span>
      <span class="uppercase tracking-widest text-sm font-medium">My Works</span>
    </div>
    <h1 class="text-5xl md:text-7xl font-bold tracking-tighter text-primary">
      My Works
    </h1>
    <p class="text-secondary text-xl font-light max-w-2xl">
      A curation of digital products, websites, and experiences I've crafted.
    </p>
  </div>

  <!-- Projects Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-16">
    <% # Placeholder Data %>
    <% projects = [
      { title: "P2P File Sharing System", desc: "Decentralized file sharing with XState & WebRTC.", category: "Web Development" },
      { title: "Road Accident Prediction", desc: "ML-powered prediction system with Streamlit UI.", category: "Machine Learning" },
      { title: "Flowbite Blog", desc: "Production-ready Rails blog with custom auth.", category: "Web Development" }
    ] %>

    <% projects.each_with_index do |project, index| %>
      <div class="group flex flex-col space-y-6 cursor-pointer">
        <!-- Project Image Placeholder -> Clean Grey Box for now -->
        <div class="aspect-[4/3] bg-tertiary overflow-hidden">
          <div class="w-full h-full bg-gray-200 group-hover:bg-gray-300 transition-colors duration-500 relative flex items-center justify-center">
             <span class="text-4xl opacity-20 group-hover:opacity-40 transition-opacity">0<%= index + 1 %></span>
          </div>
        </div>

        <div class="space-y-2">
          <div class="flex justify-between items-baseline border-b border-gray-200 pb-4 group-hover:border-primary transition-colors">
            <h3 class="text-2xl font-bold text-primary"><%= project[:title] %></h3>
            <span class="text-sm text-secondary group-hover:text-primary transition-colors"><%= Time.current.year %></span>
          </div>
          <div class="flex justify-between items-center text-sm">
             <span class="text-secondary font-medium uppercase tracking-wide"><%= project[:category] %></span>
             <span class="text-primary font-bold opacity-0 -translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300">View Case Study &rarr;</span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

