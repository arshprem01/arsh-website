<div class="min-h-screen pt-24 flex flex-col md:flex-row items-stretch overflow-hidden bg-[#F8F8F8]">
  
  <!-- Left Strip - Vertical Text -->
  <div class="hidden md:flex w-32 flex-col justify-between items-center py-20 relative border-r border-gray-200">
    <div class="h-20"></div> <!-- Spacer -->
    
    <div class="relative w-full flex justify-center">
       <div class="-rotate-90 whitespace-nowrap text-[10px] uppercase tracking-[0.2em] text-gray-400 font-medium origin-center absolute">
        Product Designer
      </div>
      <!-- Vertical Line -->
      <div class="absolute top-24 h-32 w-[1px] bg-gray-300"></div>
    </div>
    
    <div class="flex flex-col items-center gap-4">
       <span class="text-[10px] text-gray-400 font-medium -rotate-90">2026</span>
    </div>
  </div>

  <!-- Main Content Area -->
  <div class="flex-1 grid grid-cols-1 lg:grid-cols-12 w-full">
    
    <!-- Typography Column (Span 7) -->
    <div class="lg:col-span-7 flex flex-col justify-center px-8 md:px-16 lg:px-24 py-12 relative z-20">
      
      <!-- Stats -->
      <div class="flex items-start gap-12 mb-32 pl-2">
        <div>
          <h3 class="text-2xl font-light text-primary">+200</h3>
          <p class="text-[9px] text-gray-500 uppercase tracking-wide mt-1">Project completed</p>
        </div>
        <div>
          <h3 class="text-2xl font-light text-primary">+50</h3>
          <p class="text-[9px] text-gray-500 uppercase tracking-wide mt-1">Startup raised</p>
        </div>
      </div>

      <!-- Hello -->
      <div class="space-y-4 relative">
        <h1 class="text-[10rem] xl:text-[14rem] font-thin leading-[0.8] tracking-[-0.05em] text-[#1a1a1a] -ml-4 select-none">
          Hello
        </h1>
        
        <p class="text-sm text-gray-500 font-normal pl-3 relative top-2">
          &mdash; It's Arsh a design wizard
        </p>
      </div>

      <!-- Scroll Down -->
      <div class="mt-32 pl-3">
        <a href="#portfolio" class="inline-flex items-center gap-2 text-gray-900 text-[10px] uppercase tracking-widest font-medium hover:gap-3 transition-all group">
          Scroll down
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-gray-400 group-hover:translate-y-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Image Column (Span 5) -->
    <div class="lg:col-span-5 relative flex items-end justify-center overflow-visible h-[50vh] lg:h-auto">
       <div class="w-full h-full flex items-end justify-center relative">
         <!-- Image scaled to fit bottom layout -->
         <%= image_tag "profile.png", class: "h-[90%] w-auto object-contain grayscale contrast-110 brightness-110 drop-shadow-2xl", alt: "Arsh Profile" %>
       </div>
    </div>

  </div>
</div>

